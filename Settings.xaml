<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onward.Settings"
             Title="Settings">
    <VerticalStackLayout Spacing="6" Margin="50">
        <Grid RowDefinitions="*,*,*,*,*">
            <Button Text="Create User" Grid.Row="1" VerticalOptions="Center"
                   WidthRequest="300" Margin="10"
                   HorizontalOptions="Center"  Clicked="CreateUser"/>
            <Button Text="Log Out" VerticalOptions="Center"
                   WidthRequest="300" Grid.Row="2" Margin="10"
                   HorizontalOptions="Center" Clicked="LogOut" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>